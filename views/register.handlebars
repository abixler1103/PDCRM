            //     rosegold: "5",
            //     trendy: "2",
            //     flattering: "4",
            //     cpw: "5"

            // };

            let recommendation = {};

            axios.post('/register', customer)
                .then(function(response) {
                    recommendation = JSON.parse(response.data);
                    console.log(recommendation);
                    window.location.replace('/results?firstName=' + customer.firstName + '&jewelry=' + recommendation.jewelry + '&image=' + recommendation.image);

                })
