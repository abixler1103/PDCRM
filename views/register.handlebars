                email: $("#email").val(),
                cellPhone: $("#phone").val(),
                address: $("#address").val(),
                address2: $("#address2").val(),
                city: $("#city").val(),
                state: $("#state").val(),
                zip: $("#zip").val(),
                fbLink: $("#fblink").val(),
                birthday: $("#birthday").val(),
                anniversary: $("#anniversary").val(),
